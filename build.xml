<project name="EbrcModelCommon" default="Installation" basedir=".">


  <import file="${projectsDir}/WDK/build.xml" />
  <import file="${projectsDir}/CBIL/build.xml" />
  <import file="${projectsDir}/ReFlow/build.xml" />

  <!-- oooooooooooooooooooooooooo    Checkout    oooooooooooooooooooooooooo -->
  <target name="EbrcModelCommon-ChildCheckout">
    <!--available file="${projectsDir}/CBIL" type="dir" property="CBIL.present" /-->
    <available file="${projectsDir}/ReFlow" type="dir" property="ReFlow.present" />
    <available file="${projectsDir}/WDK" type="dir" property="WDK.present" />
    <!--antcall target="CBIL-Checkout" / -->
    <antcall target="ReFlow-Checkout"/>
    <antcall target="WDK-Checkout"/>
  </target>

  <!-- target name="CBIL-Checkout" unless="CBIL.present">
    <ant target="defaultProjectCheckout" inheritAll="false">
      <property name="svnurl" value="https://cbilsvn.pmacs.upenn.edu/svn/gus/CBIL" />
      <property name="project" value="CBIL"/>
      <property name="version" value="internal/api-build-9"/>
    </ant>
  </target -->

  <target name="ReFlow-Checkout" unless="ReFlow.present">
    <ant target="defaultProjectCheckout" inheritAll="false">
      <property name="svnurl" value="https://cbilsvn.pmacs.upenn.edu/svn/gus/ReFlow"/>
      <property name="project" value="ReFlow"/>
    </ant>
  </target>

  <target name="WDK-Checkout" unless="WDK.present">
   <ant target="defaultProjectCheckout" inheritAll="false">
      <property name="svnurl" value="https://cbilsvn.pmacs.upenn.edu/svn/gus/WDK"/>
      <property name="project" value="WDK"/>
      <property name="version" value="WDK_version_1-28"/>
    </ant>
  </target>
  

  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooo    Update    oooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->

  <target name="EbrcModelCommon-ChildUpdate">
    <!--ant target="defaultProjectUpdate">
      <property name="project" value="CBIL"/>
    </ant -->
    <ant target="defaultProjectUpdate">
      <property name="project" value="ReFlow"/>
    </ant>
     <ant target="defaultProjectUpdate">
      <property name="project" value="WDK"/>
    </ant>
  </target>

  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooo  Installation  oooooooooooooooooooooooooo -->
  <!-- oooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooooo -->

  <target name="EbrcModelCommon-Installation" depends="EbrcModelCommon/DatasetPresenter-Installation,
                                            EbrcModelCommon/Model-Installation,
                                            ReFlow-Installation,
                                            WDK-Installation" >

    <ant target="defaultProjectInstall">
      <property name="project" value="EbrcModelCommon"/>
    </ant>
  </target>  
  
  <!-- ooooooooooooooooooooooo  Install Components  ooooooooooooooooooooooo -->

  <target name="EbrcModelCommon/Model-Installation" >
    <ant target="defaultComponentInstall">
      <property name="project" value="EbrcModelCommon"/>
      <property name="component" value="Model"/>
    </ant>
  </target>  

  <target name="EbrcModelCommon/DatasetPresenter-Installation">
    <ant target="defaultComponentInstall">
      <property name="project" value="EbrcModelCommon"/>
      <property name="component" value="DatasetPresenter"/>
    </ant>
  </target>  



</project>
